{
  "name": "epubparse-js",
  "version": "0.2.1",
  "description": "Library for parsing epub files into book structures",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "prepublish": "npm run build",
    "test": "ava"
  },
  "author": "Jannes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jannes/epubparse/"
  },
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@types/node": "^15.0.2",
    "ava": "^3.15.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "epubparse-wasm": "0.2.3"
  },
  "type": "module",
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node",
      "--experimental-wasm-modules"
    ]
  }
}
